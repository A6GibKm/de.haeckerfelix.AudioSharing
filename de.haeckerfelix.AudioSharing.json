{
    "app-id": "de.haeckerfelix.AudioSharing",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "audio-sharing",
    "finish-args" : [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--talk-name=org.a11y.Bus",
        "--env=RUST_LOG=audio_sharing=debug",
        "--env=RUST_BACKTRACE=1",
        "--socket=pulseaudio"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [
        {
            "name": "gst-rtsp-server",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddoc=disabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.freedesktop.org/gstreamer/gst-rtsp-server.git",
                    "tag": "1.16.2"
                }
            ]
        },
        {
            "name" : "libsass",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/libsass.git",
                    "commit" : "302397c0c8ae2d7ab02f45ea461c2c3d768f248e"
                }
            ]
        },
        {
            "name" : "sassc",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/lazka/sassc.git",
                    "commit" : "82803377c33247265d779af034eceb5949e78354"
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dintrospection=enabled",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false"
            ],
            "cleanup" : [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "tag" : "1.0.0-alpha.2"
                }
            ]
        },
        {
            "name": "audio-sharing",
            "buildsystem": "meson",
            "run-tests": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/AudioSharing/uploads/d30a66bd0b493fd7f831aaa94e9ec547/audio-sharing-0.1.0.tar.xz",
                    "sha256" : "4fb23945b13b1416e1abeb36dcd18f6f7d52bd0863a4bac1ae78710450621b9e"
                }
            ]
        }
    ]
}
