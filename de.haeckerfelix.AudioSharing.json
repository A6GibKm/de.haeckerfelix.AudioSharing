{
    "app-id": "de.haeckerfelix.AudioSharing",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "audio-sharing",
    "finish-args" : [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--socket=pulseaudio"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [
        {
            "name": "gst-rtsp-server",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddoc=disabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.freedesktop.org/gstreamer/gst-rtsp-server.git",
                    "tag": "1.16.2"
                }
            ]
        },
        {
            "name": "audio-sharing",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/AudioSharing/uploads/7a5277dc6d7cd1cf6131eb3f313a1743/audio-sharing-0.2.0.tar.xz",
                    "sha256" : "96f704f58da04037e0b7c26644a1c45c4ad3168dd2a439d78376a634776816c1"
                }
            ]
        }
    ]
}
